<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="16dp">

        <TextView
            android:id="@+id/tvNombreArticulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre del artículo" />

        <TextView
            android:id="@+id/tvMarcaArticulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Marca del artículo" />

        <TextView
            android:id="@+id/tvModeloArticulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Modelo del artículo" />

        <TextView
            android:id="@+id/tvPrecioArticulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Precio del artículo" />

        <TextView
            android:id="@+id/tvStockArticulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stock del artículo" />

    </LinearLayout>

</LinearLayout>
